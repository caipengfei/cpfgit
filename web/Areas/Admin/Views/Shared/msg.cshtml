@{
    ViewBag.Title = "falure";
}
@model qch.core.Msg
<!DOCTYPE html>
<html>
<head>
    <title>falure</title>
    <style>
        .failure {
            width: 600px;
            height: 300px;
            margin: 100px auto;
            background: url(/Content/admin/lib/images/failure.jpg) no-repeat;
        }

            .failure h2 {
                position: relative;
                left: 30%;
                top: 20%;
            }

            .failure a {
                width: 150px;
                height: 30px;
                font-size: 12px;
                color:#808080;
                position: relative;
                left: 30%;
                top: 80px;
                border: 1px solid #ccc;
                padding: 5px;
                text-decoration:none;
                border-radius:2px;
            }
                .failure a:hover {
                    font-weight:700;
                }
    </style>
</head>
<body>
    <div class="failure">
        <h2>@Model.Data ！</h2>
        <a href="@Model.ReturnUrl">返回上一页</a>
    </div>
</body>
</html>