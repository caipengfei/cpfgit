<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="renderer" content="webkit" />
    <title>动态详情</title>
    <link rel="stylesheet" href="css/public.css?v=e2a08fa8c189318bcaee1075c8bed785">

    <link rel="stylesheet" href="css/page5.css?v=5ce1f4cd626e0f4e588bb7d7bf776e9d">
</head>
<body>
    <table class="downloadbox" cellpadding="0" cellspacing="0">
            <tr>
                <td><div class="image"><img src="img/logo.png"></div></td>
                <td>
                    <h2>青创汇 / 提供一站式创业服务</h2>
                    <p>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <strong>10万人下载</strong>
                    </p>
                </td>
                <td><a onclick="godown()">立即下载</a></td>
            </tr>
        </table>
        <style>
            .downloadbox{
                width:100%; height:3.5rem; position: fixed; top:0; left:0; background: rgb(236,236,236); padding:0 .8rem 0 1.2rem;
            }
            .downloadbox td:nth-child(1){
                width:4rem;
            }
            .downloadbox td:nth-child(3){
                text-align: right;
            }
            .downloadbox .image{
                width:3rem; height:3rem; background: #fff; border-radius:.6rem; 
            }
            .downloadbox .image img{
                width:100%; height:100%;
            }
            .downloadbox a{
                padding:.5rem .7rem; background: #353535; border-radius:.6rem; color:#fff;
            }
            .downloadbox h2{
                font-size:.9rem; color:#353535; margin-bottom:.3rem;
            }
           .downloadbox p{
                line-height: 1.2rem;
            }
            .downloadbox p i{
                color:rgb(232,145,2); display: block; width:1.1rem; height:1.1rem; background: url(img/icon/xing.png) no-repeat 50% 50%;
                background-size: 100% 100%; float: left; 
            }
            .downloadbox p strong{
                color:rgb(118,118,118); font-size:.8rem; font-weight: normal;
            }
        </style>
    <div class="container">

        <header>
            <!--<a class="left"><i class="fa fa-angle-left"></i></a>
            <a class="right">...</a>
            <h2>动态详情</h2>-->
        </header>
        <div class="dynamic">
            <table id="tabInfo" class="title">
                <tr>
                    <td>
                        <img src="img/photo3.jpg?v=8ee13fcc1f5652b80ca87e4fa116751d"  onerror="this.src='img/avator.png'"></td>
                    <td>
                        <h2></h2>
                        <h3></h3>
                    </td>
                </tr>
            </table>
            <p class="black" id="pRemark"></p>
            <div class="imgbox" id="divImgs">
            </div>
            <p class="position">
                <i class="fa fa-map-marker"></i><span id="spAddress"></span>
            </p>
            <div class="tools">
                <a class="left" onclick="godown()"><i class="fa fa-share"></i></a>
                <a class="right msg" onclick="godown()"><i class="fa fa-comment"></i>赞</a>
                <a class="right like" onclick="godown()"><i class="fa fa-heart"></i></a>
                <!--<a class="left" onclick="godown()">转</a>
                <a class="right msg" onclick="godown()">评</a>
                <a class="right like" onclick="godown()">赞</a>-->
            </div>
            <p class="date" id="pDate">5天前</p>
        </div>
        <div class="visitor">
            <div class="box" id="dianzan">
            </div>
        </div>
        <div class="commentbox">
            <h2>最新评论</h2>
            <ul class="commentlist" id="ulComment">

                <!--<li>
                    <a>
                        <img src="img/photo3.jpg?v=8ee13fcc1f5652b80ca87e4fa116751d"></a>
                    <div>
                        <h3>欧阳博远<span>刚刚</span><a class="remove">删除</a></h3>
                        <p>
                            <strong>回复愣文青:</strong>
                            你可以多多号召你的朋友们来参加，说不定还能促成几段好姻缘~
                        </p>
                    </div>
                </li>-->

            </ul>
        </div>

    </div>
    <script src="js/jquery.min.js"></script>
    <script src="js/zepto.min.js?v=1abd55c514bd00abc726cca455f6b4c9"></script>
    <script src="../js/common.js"></script>
    <script>
        var guid = GetUrlParam("Guid");
        if (!guid || guid == "") { guid = '4480b706-1d7b-4a6b-a761-efc935f9a4e6'; }
        //获取动态详情
        $.ajax({
            type: 'post',
            cache: false,
            dataType: 'json',
            url: '../QCH_Topic/Ajax_Topic.ashx',
            data: [
                { name: 'Action', value: 'GetTopicView' },
                { name: 'Guid', value: guid }
            ],
            success: function (data) {                
                if (data) {
                    if (data.Pic.length > 0) {
                        var model = data.Pic;
                        var list = '';
                        for (var item in model) {                            
                            list += '<img src="' + imgUrl + model[item].t_Pic_Url + '">';
                        }
                        $("#divImgs").append(list);
                        $('#divImgs img').filter(function (i) { return !(i % 3); }).addClass('first');
                    }
                    var avator = 'img/avator.png';
                    if (data.t_User_Pic && data.t_User_Pic != "") {
                        avator = avatorUrl + data.t_User_Pic;
                    }
                    $("#tabInfo").replaceWith('<table id="tabInfo" class="title"><tr><td><img src="' + avator + '"></td><td><h2>' + data.t_User_RealName + '</h2><h3>' + data.PositionName + ' ' + data.t_User_Commpany + '</h3></td></tr></table>');
                    $("#pRemark").text(data.t_Topic_Contents);
                    $("#spAddress").text(data.t_Topic_Address);
                    $("#pDate").text(data.t_Date);
                    if (data.PraiseCount == 0) {
                        $("#dianzan").append('<a>暂无点赞信息</a>');
                    } else {
                        var list = '';
                        var model = data.PraiseUsers;
                        for (var item in model) {
                            if (model[item].PraiseUserPic && model[item].PraiseUserPic != "") {
                                avator = avatorUrl + model[item].PraiseUserPic;
                            }
                            list += '<a><img src="' + avator + '"></a>';
                        }
                        $("#dianzan").append(list);
                        winResize($('#dianzan img'));
                        $('#dianzan img').filter(function (i) { return !(i % 8); }).addClass('first');
                    }
                }                
            }
        })
        //获取评论信息   6216 9130 0019 2824
        $.ajax({
            type: 'post',
            cache: false,
            dataType: 'json',
            url: '../QCH_User/Ajax_User.ashx',
            data: [
                { name: 'Action', value: 'GetTalk' },
                { name: 'Guid', value: guid }
            ],
            success: function (data) {
                if (data && data[0].result != '暂无数据') {
                    var list = '';
                    for (var item in data) {
                        var avator = 'img/avator.png';
                        if (data[item].t_User_Pic && data[item].t_User_Pic != "") {
                            avator = avatorUrl + data[item].t_User_Pic;
                        }
                        var name = data[item].t_User_RealName;
                        if (!name || name == "") {
                            name = data[item].t_User_LoginId;
                            if (name || name.length > 3) {
                                name = name.substring(0, 3) + '****' + name.substring(name.length - 2, name.length - 1);
                            }
                        }
                        list += '<li><a><img src="' + avator + '"></a><div><h3>' + name + '<span>' + data[item].t_Talk_FromDate + '</span></h3><p>' + data[item].t_Talk_FromContent + '</p></div></li>'
                    }
                    $("#ulComment").append(list);
                    winResize($('#ulComment img'));
                } else {
                    $("#ulComment").append('<li><a>暂无</a></li>');
                }                
            }
        })
        function godown() {
            location.href = 'http://www.cn-qch.com/app';
        }
        function winResize($e) {
            $e.css({
                height: $e.width(),
                borderRadius: $e.width() / 2
            })
        }
        $(function () {
            $(window).resize(function () {
                $('.imgbox img').css({
                    height: $('.imgbox img').width(),
                    marginBottom: $('.imgbox img').eq(1).css('margin-left')
                })
                winResize($('.visitor img'));
                winResize($('.commentbox .commentlist>li>a>img'));
            }).resize();
            $('.visitor .box a').filter(function (i) { return !(i % 8); }).addClass('first');
            
        })
    </script>

</body>
</html>
