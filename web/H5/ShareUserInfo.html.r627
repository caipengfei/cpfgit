    <script type="text/javascript">
        function godown() {
            location.href = 'http://www.cn-qch.com/app';
        }
        //获取Url中的参数
        function getQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)", "i");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]);
            return null;
        }
        var guid = getQueryString('guid');
        if (!guid || guid == "") {
            guid = 'd1937210-9b5a-4bf0-b988-de73ae8468c3';
        }
        //获取用户信息
        $.ajax({
                type: 'post',
                cache: false,
                dataType: 'json',
                url: '../QCH_User/Ajax_User.ashx',
                data: [{
                    name: 'Action',
                    value: 'getModel'
                }, {
                    name: 'Guid',
                    value: guid
                }],
                success: function(data) {
                    if (data) {
                        var webtitle = '用户分享';
                        if (data.t_User_Style == 1) {
                            webtitle = '创客分享';
                        }
                        if (data.t_User_Style == 2) {
                            webtitle = '投资人分享';
                        }
                        if (data.t_User_Style == 3) {
                            webtitle = '合伙人分享';
                        }
                        $(document).attr("title", "用户分享");
                        var avator = 'img/avator.png';
                        if (data.t_User_Pic && data.t_User_Pic != "") {
                            avator = avatorUrl + data.t_User_Pic;
                        }
                        //用户基本信息
                        var userinfo = '<div class="box" id="divUserInfo"><img src="' + avator + '"><h2 id="userName">' + data.t_User_RealName + '</h2><h3>' + data.t_User_Commpany + '<span id="postionName">' + getStyle(data.t_User_Position, 'postionName') + '</span></h3></div>'
                        $("#divUserInfo").replaceWith(userinfo);
                        //个人简介
                        $("#pUserRemark").text(data.t_User_Remark);
                        //投资领域
                        getStyles(data.t_User_InvestArea, 'divInvestArea');
                        //投资阶段
                        getStyles(data.t_User_InvestPhase, 'divInvestPhase');
                        //投资金额
                        $("#spInvestMoney").text(data.t_User_InvestMoney);
                    }
                }
            })
            //根据类型Id获取类型名称
        function getStyles(Ids, tid) {
            var xy = '';
            if (Ids && Ids != "") {
                if (Ids.split(";").length > 1) {
                    var id = Ids.split(";");
                    if (id.length > 0) {
                        for (var i = 0; i < id.length; i++) {
                            xy += id[i] + ',';
                        }
                    }
                    xy = xy.substring(0, xy.length - 1);
                    $.ajax({
                        type: 'post',
                        cache: false,
                        dataType: 'json',
                        url: '../QCH_Style/Ajax_Style.ashx',
                        data: [{
                            name: 'Action',
                            value: 'StyleDataByIds'
                        }, {
                            name: 'IDs',
                            value: xy
                        }],
                        success: function(data) {
                            if (data) {
                                var model = data;
                                var list = '<div id="' + tid + '">';
                                for (var item in model) {

                                    list += '<a>' + model[item].text + '</a>';
                                }
                                list += '</div>';
                                $("#" + tid).replaceWith(list);
                            }
                        }
                    })
                } else {
                    $.ajax({
                        type: 'post',
                        cache: false,
                        dataType: 'json',
                        url: '../QCH_Style/Ajax_Style.ashx',
                        data: [{
                            name: 'Action',
                            value: 'StyleDataByIds'
                        }, {
                            name: 'IDs',
                            value: Ids
                        }],
                        success: function(data) {
                            if (data) {
                                var model = data;
                                var list = '<div id="' + tid + '">';
                                list += '<a>' + model.text + '</a>';
                                list += '</div>';
                                $("#" + tid).replaceWith(list);
                            }
                        }
                    })
                }
            }
        }
        //投资案例
        $.ajax({
                type: 'post',
                cache: false,
                dataType: 'json',
                url: '../QCH_Place/Ajax_Place.ashx',
                data: [{
                    name: 'Action',
                    value: 'PlaceCase'
                }, {
                    name: 'guid',
                    value: guid
                }],
                success: function(data) {
                    if (data) {
                        var list = '<div class="case" id="divCase"><h2>投资案例</h2><table cellpadding="0" cellspacing="0">';
                        var model = data.Rows;
                        for (var item in model) {
                            var tid = 'td_' + model[item].t_Invest_Phase.split(";")[0];
                            list += '<tr><td><img src="' + imgUrl + model[item].t_Invest_Pic + '"></td><td>' + model[item].t_Invest_Project + '</td><td id="' + tid + '">' + getStyle(model[item].t_Invest_Phase, tid) + '</td><td>' + GetDate(model[item].t_Invest_Date) + '</td></tr>';
                        }
                        list += '</table></div>';
                        $("#divCase").replaceWith(list);
                        winResize($('#divCase img'));
                    }
                }
            })
            //获取关注的人（数量）
        $.ajax({
                type: 'post',
                cache: false,
                dataType: 'json',
                url: '../QCH_User/Ajax_User.ashx',
                data: [{
                    name: 'Action',
                    value: 'Attention'
                }, {
                    name: 'guid',
                    value: guid
                }],
                success: function(data) {
                    if (data) {
                        $("#spAttention").text(data.Total);
                    }
                }
            })
            //获取粉丝（数量）
        $.ajax({
                type: 'post',
                cache: false,
                dataType: 'json',
                url: '../QCH_User/Ajax_User.ashx',
                data: [{
                    name: 'Action',
                    value: 'MyFans'
                }, {
                    name: 'guid',
                    value: guid
                }],
                success: function(data) {
                    if (data) {
                        $("#spFans").text(data.Total);
                    }
                }
            })
            //根据类型Id获取类型名称
        function getStyle(Ids, tid) {
            var id = Ids.split(";")[0];
            $.post("../QCH_Style/Ajax_Style.ashx", {
                Action: "StyleDataByIds",
                IDs: id
            }, function(data) {
                if (data) {
                    $("#" + tid).text(data.text);
                }
            }, "json")

        }

        function winResize($e) {
            $e.css({
                height: $e.width(),
                borderRadius: $e.width() / 2
            })
        }
        $(function() {
            $(window).resize(function() {
                winResize($('.follow img'));
                winResize($('.member img'));
                winResize($('.case img'));
            }).resize();
        })
        $(function() {
            $(document).ajaxStop(function() {
                imageLoader(removeShade);
            })
        })
    </script>

