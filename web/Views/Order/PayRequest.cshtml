@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="renderer" content="webkit" />
    <title>支付状态</title>
    <link rel="stylesheet" href="/h5/css/public.css">
    <style>
        .container {
            margin-top: 4rem;
        }

        .successbox {
            text-align: center;
            padding: 0 1rem;
        }

        .icon_success {
            width: 8rem;
            height: 8rem;
            border-radius: 4rem;
            background: rgb(162,201,240) url(/h5/img/icon/duihao_img@2x.png) no-repeat 60% 50%;
            background-size: 6rem 6rem;
            margin: 1rem 0;
        }

        .tit_success {
            color: rgb(162,201,240);
            font-size: 1.6rem;
            font-weight: bold;
            margin-bottom: 1.6rem;
        }

        p {
            font-size: 1.1rem;
            line-height: 1.6rem;
        }

        .orderID {
            color: #333;
            margin-bottom: .6rem;
        }

        .tip {
            color: rgb(56,216,60);
        }

        .btn_lookup {
            width: 90%;
            height: 2.8rem;
            line-height: 2.8rem;
            font-size: 1.4rem;
            background: rgb(162,201,240);
            color: #fff;
            border-radius: 1.4rem;
            margin-top: 2rem;
        }
    </style>
</head>

<body>
    <table class="downloadbox" cellpadding="0" cellspacing="0">
        <tr>
            <td>
                <div class="image">
                    <img src="/h5/img/logo.png">
                </div>
            </td>
            <td>
                <h2>青创汇 / 为创业者而生</h2>
                <p>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <strong onclick="godown()">10万人下载</strong>
                </p>
            </td>
            <td><a onclick="godown()">立即下载</a></td>
        </tr>
    </table>
    <!-- 主内容区 模板渲染 -->
    <div class="container">
        <div class="successbox">
            <span class="icon_success"></span>
            <h2 class="tit_success">支付成功!</h2>
            <p class="orderID">本次交易订单号：@ViewBag.OrderNo</p>
            <p class="tip">交易完成后，我们会尽快处理您的订单信息！</p>
            <a onclick="goproof()" class="btn_lookup">查看报名凭证</a>
        </div>
    </div>
    <input style="display:none" value="@ViewBag.ApplyGuid" id="txtApplyGuid" />
    <script>
        function godown() {
            location.href = 'http://www.cn-qch.com/app';
        }
        function goproof() {
            window.location.href = '/wxuser/ApplyProof?guid=@ViewBag.ApplyGuid';
        }
    </script>
</body>
</html>
