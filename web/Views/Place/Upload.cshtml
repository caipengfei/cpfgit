@{
    ViewBag.Title = "空间上传";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}
@section css{
    <link rel="stylesheet" type="text/css" href="/Content/css/reset.css" />
    <link rel="stylesheet" type="text/css" href="/Content/css/spaceManage.css" />
    <!--引用百度地图API-->
    <style type="text/css">
        html, body {
            margin: 0;
            padding: 0;
        }

        .iw_poi_title {
            color: #CC5522;
            font-size: 14px;
            font-weight: bold;
            overflow: hidden;
            padding-right: 13px;
            white-space: nowrap;
        }

        .iw_poi_content {
            font: 12px arial,sans-serif;
            overflow: visible;
            padding-top: 4px;
            white-space: -moz-pre-wrap;
            word-wrap: break-word;
        }
    </style>
    <script type="text/javascript" src="http://api.map.baidu.com/api?key=&v=1.1&services=true"></script>
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=sLkseklHiNvah00bQlxqU2pT"></script>
}
<div class="content">
    <div class="wrap clearfix">
        @Html.Action("uc", "qch")
        <div class="right">
            <div class="spaceManage info">
                <!--申请入驻-->
                <div class="spaceApply">
                    <form id="form0" method="post" action="/place/upload" novalidate="novalidate" name="house">
                        @Html.ValidationSummary(true)
                        <div class="upload">
                            <p><span>*</span>&nbsp;众创空间LOGO</p>
                            <div class="up_left">
                                <img src="/Content/image/logo2.png" width="120" height="120" alt="logo" id="imgLoad" autocomplete="off">
                            </div>
                            <div class="up_right">
                                <p class="r_text">请使用至少200*200的jpg,png,gif格式的图片,大小不超过5M</p>
                                <a href="javascript:void(0)" class="imgUpload" onclick="openBrowse('file')">
                                    <img src="/Content/image/logoButton.png" width="135" height="37" alt="upload">
                                </a>
                                <!--把file隐藏-->
                                <input type="file" name="file1" id="file" style="display: none">
                            </div>
                        </div>
                        <div class="group">
                            <div id="groupBg" class="groupBg">
                                <p class="group1"><span>*</span>&nbsp;众创空间名称</p>
                                <p class="groupInfor" id="groupInfor">&nbsp;&nbsp;请填写创客名称</p>
                            </div>
                            <input type="text" name="t_Place_Name" class="box1" placeholder="请输入您的空间名称(15字以内)" id="txtName" style="outline: none;">
                        </div>
                        @*<div class="name">
                            <div id="nameBg" class="nameBg">
                                <p class="name1"><span>*</span>&nbsp;众创空间名称</p>
                                <p class="nameInfor" id="nameInfor">&nbsp;&nbsp;请填写创客名称</p>
                            </div>
                            <input type="text" name="spaceName" class="box1" placeholder="请输入您的空间名称(15字以内)" id="nameContent" style="outline: none;">
                        </div>*@
                        <div class="city">
                            <p><span>*</span>&nbsp;所在城市</p>
                            @Html.Action("area","place")
                        </div>
                        <div class="address">
                            <div class="addressBg wrap" id="addressBg">
                                <p class='address1'><span>*</span>&nbsp;详细地址</p>
                                <p class="addressInfor" id="addressInfor">&nbsp;&nbsp;请填写详细地址</p>
                            </div>
                            <input type="text" class="address box1" placeholder="请输入详细的街道地址" id="suggestId" name="t_Place_Street" style="outline: none;">
                        </div>
                        <div class="service">
                            <div class="serviceBg">
                                <p class="service1"><span>*</span>&nbsp;所在经纬度（可点击地图来改变经纬度）</p>
                                <p class="serviceInfor">&nbsp;&nbsp;请设置您的坐标</p>
                                <div>&nbsp;&nbsp;&nbsp;&nbsp;<span style="margin-top:20px;">经度：</span><input id="txtLng" name="t_Place_Longitude" style="border:1px solid #dedede;width:145px;height:28px;line-height:28px;border-radius:5px;font-size:12px;padding-left:5px;" readonly="true" /><span style="margin-top:10px;">&nbsp;&nbsp;&nbsp;&nbsp;纬度：<input id="txtLat" name="t_Place_Latitude" readonly="true" style="border:1px solid #dedede;width:145px;height:28px;line-height:28px;border-radius:5px;font-size:12px;padding-left:5px;" /></span></div>
                            </div>

                            <!--百度地图容器-->
                            <!--百度地图容器-->
                            <div style="width: 800px; height: 250px; border: #ccc solid 1px;" id="dituContent"></div>
                              
                            <div id="searchResultPanel" style="border: 1px solid #C0C0C0; width: 150px; height: auto; display: none;"></div>
                        </div>

                        <div class="summary">
                            <div class="summaryBg" id="summaryBg">
                                <p class="summary1"><span>*</span>&nbsp;一句话简介</p>
                                <p class="summaryInfor" id="summaryInfor">&nbsp;&nbsp;请填写一句话简介</p>
                            </div>
                            <input type="text" name="t_Place_OneWord" class="box1" placeholder="请填写空间简介(20字以内)" id="summaryContent" style="outline: none;">
                        </div>
                        <div class="service">
                            <div class="serviceBg" id="serviceBg">
                                <p class="service1"><span>*</span>&nbsp;提供服务</p>
                                <p class="serviceInfor" id="serviceInfor">&nbsp;&nbsp;请填写提供的服务</p>
                            </div>
                            <textarea name="t_Place_ProvideService" class="box2" cols="30" rows="10" id="serviceContent" style="resize: none; outline: none;" placeholder="说说您的众创空间能为创客提供那哪些服务,让更多的人为对您的项目感兴趣..."></textarea>
                        </div>
                        <div class="introduce">
                            <div class="introduceBg" id="introduceBg">
                                <p><span>*</span>&nbsp;详细介绍</p>
                                <p class="introduceInfor" id="introduceInfor">&nbsp;&nbsp;请填写详细介绍</p>
                            </div>
                            <textarea name="t_Place_Instruction" class="box2" cols="30" rows="10" id="introduceContent" style="resize: none; outline: none;" placeholder="说说您的众创空间的优势和亮点，让更多的人对您的项目感兴趣...”"></textarea>
                        </div>
                        <div class="entry">
                            <p>入驻条件</p>
                            <textarea name="t_Place_CheckIn" class="box2" cols="30" rows="10" id="entryContent" style="resize: none; outline: none;" placeholder="请填写入驻条件"></textarea>
                        </div>
                        <div class="policy">
                            <p>政策支持</p>
                            <textarea name="t_Place_Policy" class="box2" cols="30" rows="10" id="policyContent" style="resize: none; outline: none;" placeholder="请填写优惠政策,如税收优惠,政策扶持"></textarea>
                        </div>
                        <div class="label">
                            <div class="labelBg" id="labelBg">
                                <p><span>*</span>&nbsp;标签</p>
                                <p class="labelInfor" id="labelInfor">&nbsp;&nbsp;请填写标签</p>
                            </div>
                            <input type="text" name="t_Place_Tips" class="box1" placeholder="请填写空间特色,多以逗号隔开" id="labelContent" style="outline: none;">
                        </div>
                        <div class="yn">
                            <p><span>*</span>&nbsp;是否允许入驻</p>
                            &nbsp;&nbsp;&nbsp;
									<input type="radio" value="1" name="t_Place_IfIn" checked="checked"><span style="font-size: 14px;">是&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            <input type="radio" value="0" name="t_Place_IfIn"><span style="font-size: 14px;">否&nbsp;&nbsp;</span>
                        </div>
                        <div class="button">
                            <input type="button" class="button1" value="提交入驻申请" onclick="Save()" style="outline: none;" id="tijiao">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section js{
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="/Content/js/spaceManage.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="/Content/js/uploadPlace.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(".content .left li").removeClass("active active1");
        $("#spaceManage").addClass('active1');
    </script>
}