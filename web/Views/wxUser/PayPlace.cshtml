@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="renderer" content="webkit" />
    <link rel="dns-prefetch" href="//test.cn-qch.com/" />
    <link rel="dns-prefetch" href="//www.cn-qch.com/" />
    <title>订单支付</title>
    <link rel="stylesheet" href="/wx/css/public.css">
    <link rel="stylesheet" href="/wx/css/orderPay.css">
</head>

<body>
    <input type="text" id="url" value="@ViewBag.ReturnUrl"  style="display:none"/>

    <div class="container">
        <input style="display:none" id="txtIsOrder" value="@ViewBag.IsOrder" />
        <div class="orderbox">
            <p>订单号: @ViewBag.OrderNo</p>
            <div>
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <td></td>
                        <td>
                            <h2>￥@ViewBag.PayMoney</h2>
                            <p>场地使用预约</p>
                        </td>
                    </tr>
                </table>
                <span>@ViewBag.OrderName</span>
            </div>
        </div>
        <div class="paymode">
            <h2>请选择支付方式</h2>
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td></td>
                    <td>
                        <h2>微信支付</h2>
                        <p>微信安全支付</p>
                    </td>
                    <td class="checked"></td>
                </tr>
            </table>
        </div>
        <div class="paybox">
            <a class="btn-pay" id="getBrandWCPayRequest" href="javascript:void(0);" target="_blank">确认支付 ￥@ViewBag.PayMoney</a>
        </div>
    </div>

    <script src="/content/js/jquery.min.js"></script>
    <script src="~/H5/js/util.js"></script>
    <script type="text/javascript">
        var mm = $("#txtIsOrder").val();
        document.body.innerHTML = '';
        util.msgBox(mm);
        setTimeout(function () { window.location.href = '/wx/reserveSpace.html'; }, 2000)
        function godown() {
            location.href = 'http://www.cn-qch.com/app';
        }
    </script>
</body>
</html>
